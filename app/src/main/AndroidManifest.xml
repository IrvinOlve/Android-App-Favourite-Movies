<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Movies">
        <activity android:name=".Activities.MovieRatings.FoundMoviesActivity"></activity>
        <activity android:name=".Activities.MovieRatings.RatingsActivity" />
        <activity android:name=".Activities.SearchMovie.SearchMovieActivity" />
        <activity android:name=".Activities.EditMovies.EditMovieActivity" />
        <activity android:name=".Activities.EditMovies.EditMoviesActivity" />
        <activity android:name=".Activities.DisplayFavouriteMovies.DisplayFavouritesActivity" />
        <activity android:name=".Activities.DisplayAllMovies.DisplayMoviesActivity" />
        <activity android:name=".Activities.RegisterMovie.RegisterMovieActivity" />
        <activity android:name=".Activities.MainMenu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>